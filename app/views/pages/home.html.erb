<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= asset_path 'Background-banner.png'%>')">
  <div class="banner-content">
    <div class="banner-title">
    <h1>Don't buy what your neighbour can lend you!</h1>
    </div>
    <div class="banner-search-form">
      <%= form_tag items_path, method: :get do %>
        <div class="wrapper">
          <%= text_field_tag :query,
              params[:query],
              id: "banner-typed-text",
              class: "search-form-control"
            %>
          <%= submit_tag "GO", class: "action-button", id: "home-page-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <%= render "shared/card-content1" %>
</div>
<div class="container ">
  <center><h3>Our latest items</h3></center>
  <div class="d-flex flex-wrap justify-content-between card-border">
    <% @items.each do |item| %>
    <div class="card-item">
      <%= link_to item_path(item), style: 'text-decoration: none' do%>
      <% if item.photos.attached? %>
      <%= cl_image_tag item.photos.first.key, crop: :fill %>
      <% else %>
      <img src='https://source.unsplash.com/800x450/?<%= item.name %>' alt='<%= item.name %>' >
      <% end %>
      <% end %>

      <div class="d-flex justify-content-between my-2 mx-2">
        <h2><%= item.name.capitalize %></h2>
        <h2><%= item.price %>â‚¬ per day</h2>
      </div>

      <div class="d-flex justify-content-between mb-2 mx-2">
        <h1><%= item.location %></h1>
        <%= link_to 'more info', item_path(item), class:"link-info"%>
      </div>
    </div>
    <% end %>
  </div>
</div>
