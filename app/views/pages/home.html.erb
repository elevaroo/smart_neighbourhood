<%= render "shared/card-content1" %>
</div>

<div class="container">
  <h2>Our latest items</h2>
  <div class="d-flex flex-wrap">
      <% @items.each do |item| %>

        <div class="card-item">
            <%= link_to item_path(item), style: 'text-decoration: none' do%>
              <% if item.photo.attached? %>
                <%= cl_image_tag item.photo.key, crop: :fill %>
              <% else %>
                <img src='https://source.unsplash.com/800x450/?<%= item.name %>' alt='<%= item.name %>' >
              <% end %>
            <% end %>

              <div class="d-flex justify-content-between my-2 mx-2">
                <h2><%= item.name %></h2>
                <h2><%= item.price %>â‚¬ per day</h2>
              </div>

              <div class="d-flex justify-content-between mb-2 mx-2">
                <h1><%= item.location %></h1>
                <%= link_to 'more info', item_path(item), class:"link-info"%>
              </div>
        </div>

      <% end %>
      </div>
    <%= link_to 'Discover all our Items', items_path %>
  </div>
</div>
