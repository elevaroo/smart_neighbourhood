<div class="container">
  <h1>Discover out items</h1>
  <h2>What you can rent in your SmartNeighbourhood</h2>

  <div class="d-flex flex-wrap">
    <% @items.each do |item| %>
      <div class="card-item">
          <% if item.photo.attached? %>
            <%= cl_image_tag item.photo.key, crop: :fill %>
          <% else %>
            <img src='https://source.unsplash.com/800x450/?<%= item.name %>' alt='<%= item.name %>' >
          <% end %>
        <div class="card-item-infos">
          <h2><%= item.name %></h2>
          <h1><%= item.location %></h1>
          <div class="d-flex">
            <h2><i class="card-item-pricing"></i></i><%= item.price %> per day</h2>
          </div>
          <%= link_to 'more info', item_path(item), class:"btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>

</div>




