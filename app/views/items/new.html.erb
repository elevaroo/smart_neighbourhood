<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>New object</h1>

      <%= simple_form_for @item do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :location %>
        <%= f.input :price %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
