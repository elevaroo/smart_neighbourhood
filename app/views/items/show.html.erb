<div class="container">
  <h1> <%= @item.name %></h1>

  <!-- here we should showcase some images of the item -->
  <% if @item.photo.attached? %>
    <%= cl_image_tag @item.photo.key, height: 300, width: 400, crop: :fill %>
  <% else %>
    <img src='https://source.unsplash.com/800x450/?<%= @item.name %>' alt='<%= @item.name %>' >
  <% end %>

  <p><%= @item.description %></p>
  <p><%= @item.price %> â‚¬ per Day</p>
  <p><%= @item.location %></p>

  <p><%= link_to 'Edit the item', edit_item_path%></p>
  <%= link_to 'Back', items_path %>
</div>
